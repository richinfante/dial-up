{
  "manifest_version": 3,
  "name": "Dial_Up",
  "version": "1.0",
  "description": "Slow down website loading with a toggle and domain exclusion menu.",
  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["wlan.gif", "sounds/dial-up-internet-sound.mp3", "icon128.png", "globe.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
